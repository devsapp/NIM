while true; do currentMistral="$(s cli fc provision get --qualifier LATEST --target current 1 --service-name Search_Files --function-name mistral --region cn-shanghai -a {{ access }} | tr -d ' ' | awk -F ':' '/current:/ {print $2}' | sed 's/\x1b\[[0-9;]*m//g')"; if [ "$currentMistral" == '1' ]; then break; else echo "wait provision instance ready, currentMistral $currentMistral;" && sleep 5; fi; done;